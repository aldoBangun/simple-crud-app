head
   block head
      link(rel="stylesheet" href="/css/style.css")
      link(rel="stylesheet" href="/css/font-awesome.css")
      title Book Store
      script(src="/js/axios.js" defer)
      script(src="/js/app.js" defer)
body
   block navigation
      nav.nav
         .container.flex--between
            .nav__brand Book Store
            ul.nav__menu
               li.nav__item
                  a.nav__link(href="/book") Books
               li.nav__item
                  a.nav__link(href="/author") Author
            form.form.form-search(method="POST" action="/book/search")
               input.form__input(type="text" name="search" placeholder="book title...")
               button.btn.btn-search(type="submit")
                  i.fas.fa-search
   block content
   block footer
      footer.footer
         .container.flex--between Book Store